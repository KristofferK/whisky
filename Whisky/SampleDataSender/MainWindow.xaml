<Window x:Class="SampleDataSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleDataSender"
        mc:Ignorable="d"
        Title="Whisky Data Sender" Height="332.019" Width="623.55" ResizeMode="NoResize">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.329,-0.062"><Run Text="Te"/><Run Text="mperature"/><Run Text=" ("/><Run Text="deci"/><Run Text="kelvin)"/><LineBreak/><Run/></TextBlock>
        <TextBox Name="Temperature" HorizontalAlignment="Left" Height="23" Margin="149,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

        <TextBlock HorizontalAlignment="Left" Margin="10,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.329,-0.062" Text="Pressure (millibar)"/>
        <TextBox Name="Pressure" HorizontalAlignment="Left" Height="23" Margin="149,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

        <TextBlock HorizontalAlignment="Left" Margin="10,126,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.329,-0.062" Text="Sensor ID"/>
        <ComboBox Name="SensorID" HorizontalAlignment="Left" Margin="149,126,0,0" VerticalAlignment="Top" Width="120" SelectedValuePath="Content">
            <ComboBoxItem IsSelected="True" Content="1" HorizontalAlignment="Left" Width="118.4"/>
            <ComboBoxItem Content="2" HorizontalAlignment="Left" Width="118.4"/>
            <ComboBoxItem Content="3" HorizontalAlignment="Left" Width="118.4"/>
        </ComboBox>

        <TextBlock HorizontalAlignment="Left" Margin="10,186,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.329,-0.062" Text="Target"/>
        <ComboBox x:Name="Target" HorizontalAlignment="Left" Margin="149,186,0,0" VerticalAlignment="Top" Width="120" SelectedValuePath="Content">
            <ComboBoxItem IsSelected="True" Content="https://localhost:44330/" HorizontalAlignment="Left" Width="220"/>
            <ComboBoxItem Content="https://whiskyserver.azurewebsites.net/" HorizontalAlignment="Left" Width="220"/>
        </ComboBox>

        <Button Content="Send data to server" HorizontalAlignment="Left" Margin="10,243,0,0" VerticalAlignment="Top" Width="259" Height="49" Click="SendDataToServer_ButtonClicked"/>

        <TextBlock Name="MessageToServer" HorizontalAlignment="Left" Margin="294,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="220" Width="313"/>

        <Button Content="Flood server" HorizontalAlignment="Left" Margin="294,243,0,0" VerticalAlignment="Top" Width="313" Height="49" Click="FloodServer_ButtonClicked"/>
    </Grid>
</Window>
